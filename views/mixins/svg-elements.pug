mixin icon(humanName, caption = humanName)
  - iconsContext = require.context('images/icons', false, /\.svg$/)
  - name = humanName.toLowerCase().replace(' ', '-')
  - file = `./${name}.svg`
  svg.icon(width='28.5pt' height='28.5pt' viewbox='0 0 11 11' preserveaspectratio='xMidYMid')
    title= caption
    clippath(id=`${name}ClipPath`)
      use(x='0' y='0' xlink:href=(iconsContext(file) + '#icon'))
    use(x='0' y='0' xlink:href=(iconsContext(file) + '#icon') clip-path=`url(#${name}ClipPath)`)

mixin sponsorLogo(humanName)
  - sponsorsLogosContext = require.context('images/sponsors-logos', false, /\.svg$/)
  - name = humanName.toLowerCase().replace(' ', '-')
  - file = `./${name}.svg`
  img(style='width: 100%; max-height: 85pt' draggable='false' alt=humanName src=(sponsorsLogosContext(file) + '#icon'))
